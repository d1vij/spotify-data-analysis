{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "rootDir": "src/backend",
    "outDir": "./dist/backend",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/backend"],
  "exclude": [
    "**/__pycache__/**",
    "**/.venv/**",
    "venv/**"
  ],
}
